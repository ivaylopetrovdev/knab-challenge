{
  "name": "knab-challenge",
  "version": "0.1.0",
  "private": true,
  "description": "KNAB's code challenge for cryptocurrency",
  "repository": "https://github.com/ivaylopetrovdev/knab-challenge.git",
  "author": "Ivaylo Petrov, Senior Front-end React Developer",
  "engines": {
    "npm": ">=7.7.5",
    "node": ">=14.16.0"
  },
  "dependencies": {
    "@apollo/client": "^3.3.13",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "apollo-link-rest": "^0.8.0-beta.0",
    "graphql": "^15.5.0",
    "graphql-anywhere": "^4.2.7",
    "moment": "^2.29.1",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "typescript": "~4.2.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --runInBand --watchAll=false",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/utils/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx"
    ],
    "coverageReporters": [
      "text-summary",
      "html",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 85,
        "branches": 85,
        "lines": 85,
        "functions": 85
      }
    },
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
